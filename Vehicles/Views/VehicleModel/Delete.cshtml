@model Vehicles.Models.Models.VehicleModel


<form method="post" asp-aciton="asdf">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Vehicle Model</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MakeId"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Abrv"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <span asp-for ="MakeId" class="form-control"> @Model.MakeId</>
                    </div>
                    <div class="col-4">
                        <span asp-for="Name" class="form-control">@Model.Name</>
                    </div>
                    <div class="col-4">
                        <span asp-for="Abrv" class="form-control">@Model.Abrv</>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }